<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/nav.ejs")%>
    <div id="new-body">
      <h1>New Animal Form</h1>
      <form action="/animals" method="post" id="newform">
        <label for="species">Species</label>
        <input type="text" name="species" /><br />

        <label for="location">Location</label>
        <input type="text" name="location" /> <br />

        <label for="lifeExpectancy">Life Expectancy</label>
        <input type="text" name="lifeExpectancy" /> <br />

        <label for="extinct">Is animal extinct?</label>
        <input type="checkbox" name="extinct" /><br />

        <input type="submit" value="Add animal to the list" />
      </form>
    </div>
  </body>
</html>
