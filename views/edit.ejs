<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/nav.ejs")%>
    <h1>Editing <%= animal.spieces%></h1>
    <form action="/animals/<%= animal._id %>/?_method=PUT" method="post">
      <label for="species">Species</label>
      <input type="text" name="species" value="<%= animal.species%>" /><br />

      <label for="location">Location</label>
      <input type="text" name="location" value="<%= animal.location%>" /> <br />

      <label for="lifeExpectancy">Life Expectancy</label>
      <input
        type="text"
        name="lifeExpectancy"
        value="<%= animal.lifeExpectancy%>"
      />
      <br />

      <label for="extinct">Is animal extinct?</label>
      <input type="checkbox" name="extinct" <% if(animal.extinct=== true){ %>
      checked <% } %> /><br />

      <input type="submit" value="Update Animal" />
    </form>
  </body>
</html>
